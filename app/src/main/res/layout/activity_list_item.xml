<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/list_background"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="380dp"
        android:layout_height="30dp"
        android:text="Title"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_heart"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_writer"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="writer"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title" />

    <TextView
        android:id="@+id/txt_regDate"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="2000-00-00"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textSize="17dp"
        app:layout_constraintLeft_toRightOf="@id/txt_writer"
        app:layout_constraintTop_toBottomOf="@id/txt_title" />

    <TextView
        android:id="@+id/txt_heart"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/ic_baseline_favorite_24"
        app:layout_constraintRight_toLeftOf="@id/txt_comm"
        app:layout_constraintTop_toBottomOf="@id/txt_title" />

    <TextView
        android:id="@+id/txt_comm"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/ic_baseline_mode_comment_24"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>